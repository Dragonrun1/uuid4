{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": false,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "rootDir": "../",
        "removeComments": true,
        "sourceMap": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "ES2018",
        "outDir": "."
    },
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ],
    "include": [
        "../src/**/*",
        "**/*"
    ]
}
