{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "declaration": true,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "incremental": false,
        "isolatedModules": false,
        "lib": [
            "DOM",
            "ES6",
            "ES2017",
            "ES2017.Object",
            "ES2017.TypedArrays"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "newLine": "lf",
        "outDir": "../tests/",
        "skipLibCheck": false,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "src"
    ],
    "include": [
        "./src/**/*",
        "**/*"
    ]
}
