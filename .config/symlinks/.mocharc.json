{
    "$schema": "https://json.schemastore.org/mocharc",
    "bail": false,
    "color": true,
    "extension": ["cjs", "js", "mjs", "ts"],
    "node-option": [
        "experimental-specifier-resolution=node",
        "loader=ts-node/esm",
        "no-warnings"
    ],
    "recursive": true,
    "reporter": "spec",
    "require": [
        "ts-node/register"
    ],
    "sort": true,
    "spec": "test/**/*.spec.ts"
}