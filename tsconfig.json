{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": false,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2018"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
